{
  "name": "blumilksoftware/heatmap-builder",
  "description": "Heatmap builder library",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^8.2",
    "nesbot/carbon": "^3.5"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^2.8",
    "phpunit/phpunit": "^11.1.3"
  },
  "authors": [
    {
      "name": "Krzysztof Rewak",
      "email": "krzysztof.rewak@blumilk.pl"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Blumilk\\HeatmapBuilder\\": "src/"
    }
  },
  "scripts": {
    "cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --config codestyle.php",
    "csf": "./vendor/bin/php-cs-fixer fix --diff --config codestyle.php",
    "test": "./vendor/bin/phpunit tests --colors always"
  }
}
